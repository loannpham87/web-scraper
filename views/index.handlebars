<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">NYT Scraper</h1>
    <p class="lead">Scrape all your news with MongoDB!</p>
  </div>
</div>

<div class="btn-group" id="button-actions" role="group" aria-label="Basic example">
  <button type="button" class="btn btn-light"><a href="/articles">Home</a></button>
  <button type="button" class="btn btn-light"><a href="/savedArticles">Saved Articles</a></button>
  <button type="button" class="btn btn-light"><a href="/scrape">Scrape New Articles</a></button>
</div>

<div class="col-md-12 articles-div">
            {{#each articles}}
            {{#unless saved}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>{{title}}</h4>
                </div>
                <div class="panel-body">
                    {{!-- <p> {{this.paragraph}}</p> --}}
                    <a href="https://www.nytimes.com{{link}}"  target="_blank">https://www.nytimes.com{{link}}</a>
                    <br><br>
                    <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/unless}}
            {{/each}}

